{
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "target": "ES2023",
    "module": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist",
    "declaration": true,
    "skipLibCheck": true,
    "paths": {
      "@cli/*": [
        "./src/cli/*"
      ],
      "@templates/*": [
        "./src/templates/*"
      ],
      "@models/*": [
        "./src/models/*"
      ]
    }
  },
  "include": ["src/cli/**/*", "src/models/**/*"],
  "exclude": ["node_modules"]
}
